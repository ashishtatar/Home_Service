<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"

    tools:context="com.example.milind.homeservice.home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/fragment_background">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ViewFlipper
            android:id="@+id/vf"

            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10dp" />
    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll"
            android:layout_marginTop="20dp"
            android:id="@+id/relativeLayout2">


            <TextView
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Why Choose HomeService ?" />


        </RelativeLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="11dp"
            android:text=">Hassle-free service experience" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:text="> Detailed inspection,Diagnosis,consultation for your home solution" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView9"
            android:layout_marginTop="15dp"
            android:text=">High value for Money" />

        <TextView
            android:layout_marginLeft="10dp"

            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="11dp"
            android:text="> Dedicated Relationship Manager for constant assistance with placed services" />

        <android.support.v7.widget.CardView
            android:background="@color/cv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView8"
            android:layout_margin="5dp"
            android:layout_marginTop="13dp"
            android:elevation="3dp"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="HAPPINESS GUARANTEE"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignEnd="@+id/textView11"
                    android:layout_below="@+id/textView10"
                    android:layout_marginEnd="18dp"
                    app:srcCompat="@drawable/tech" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/textView10"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/iw" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignStart="@+id/textView13"
                    android:layout_below="@+id/textView10"
                    android:layout_marginStart="15dp"
                    app:srcCompat="@drawable/rw" />

                <TextView
                    android:textSize="10sp"
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView12"
                    android:layout_alignBottom="@+id/textView12"
                    android:layout_alignParentStart="true"
                    android:text="Verified Profeesional" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView3"
                    android:layout_centerHorizontal="true"
                    android:text="Insured Rework"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/imageView4"
                    android:layout_marginEnd="13dp"
                    android:text="Rework Assurance"
                    android:textSize="10sp" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>


    </RelativeLayout>

</FrameLayout>
